<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleNoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Analysis"
        android:textSize="45sp"
        android:background="@color/almost_black"
        android:textColor="@color/almost_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStockfishResultNoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stockfish result:"
        android:textSize="17sp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/glResultNoInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleNoInfo" />

    <TextView
        android:id="@+id/tvBestMoveNoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best move:"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/glResultNoInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvStockfishResultNoInfo" />

    <TextView
        android:id="@+id/tvBestResponseNoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best response:"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/glResultNoInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvBestMoveNoInfo" />

    <View
        android:id="@+id/dividerNoInfo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/almost_black"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBestResponseNoInfo" />

    <TextView
        android:id="@+id/tvNoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="This position is not present in the Masters database"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerNoInfo" />
    <!--2 million games of players with FIDE +2200 from 1952 to 2016-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glResultNoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />
</androidx.constraintlayout.widget.ConstraintLayout>